                            <?= $this->l->t('related_questions__write_first_answer') ?>
                        </a>
                    <?php endif; ?>

                    <span class="mx-2 color-gray-900 font_weight_800">&middot;</span>
                    <?= $this->l->t('q__last_updated') ?> <?= DateTime_Humanizer::humanizeTimestamp($this->lang, $question->getAnswer()->getUpdatedAt()) ?>
