
<?php if (isset($this->related_questions)): ?>
    <div class="my-5 ml-sm-2">
        <div class="title">
            Похожие вопросы
        </div>

        <?php foreach ($this->related_questions as $question): ?>
            <div class="my-4">
                <a class="h4" href="<?= Question_URL_Helper::getURL($this->lang, $question) ?>">
