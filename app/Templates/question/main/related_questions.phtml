
<?php if (isset($this->related_questions)): ?>
<div class="my-4">
	<!-- related questions -->
	<div class="h6 font-weight-bold border-bottom pb-2 mb-3">
		<?= _('Related questions') ?>
	</div>

	<?php foreach ($this->related_questions as $question): ?>
		<div class="my-4">
			<a class="h5 color-gray-800 text-decoration-none" href="<?= $question->getURL($this->lang) ?>">
				<?= $question->getTitle() ?>
			</a>
			<div class="small color-gray-500">
				<?php if (strlen($question->getAnswer()->getText())): ?>
					<?= $question->getHumanizedMinutesToRead() ?>
					<span class="mx-1 color-gray-900 font-weight-bold">&middot;</span>
				<?php endif; ?>

				<?= _('Answer updated') ?> <?= DateTime_Humanizer::humanizeTimestamp($this->lang, $question->getAnswer()->getUpdatedAt()) ?>

				<?php if (strlen($question->getAnswer()->getText()) == 0): ?>
					<span class="mx-1 color-gray-900 font-weight-bold">&middot;</span>
					<a rel="nofollow" href="<?= $question->getEditURL($this->lang) ?>">
						<?= _('Write first answer') ?>
					</a>
				<?php endif; ?>
			</div>
		</div>
	<?php endforeach; ?>
	<!-- / related questions -->
</div>
<?php endif; ?>
