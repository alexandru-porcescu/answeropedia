<?php if ($this->list == 'questions' && count($this->questions)): ?>

    <?php foreach ($this->questions as $question): ?>
        <div class="my-4">
			<a class="h3 color-gray-800 text-decoration-none" href="<?= $question->getURL($this->lang) ?>">
				<?= $question->title ?>
			</a>
			<div class="small color-gray-500">
				<?= $this->translator->get('Answer updated') ?> <?= DateTime_Humanizer::humanizeTimestamp($this->lang, $question->answer->updatedAt) ?>

				<?php if (strlen($question->answer->text) == 0): ?>
					<span class="mx-1 color-gray-900 font-weight-bold">&middot;</span>
					<a rel="nofollow" href="<?= $question->getEditURL($this->lang) ?>">
						<?= $this->translator->get('Write first answer') ?>
					</a>
				<?php endif; ?>
			</div>
        </div>
    <?php endforeach; ?>

<?php endif; ?>
 