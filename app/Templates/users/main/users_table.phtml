<?php if (count($this->users)) : ?>

<?php foreach ($this->users as $user) : ?>
<div class="media">
	<a class="d-block wh-4 mr-3 mb-3" href="<?= $user->get_URL($this->lang) ?>">
		<img class="wh-4 mr-3 rounded" src="<?= $user->get_avatar_URL_small() ?>">
	</a>
	<div class="media-body">
		<a class="h5 text-dark text-decoration-none" href="<?= $user->get_URL($this->lang) ?>">
			<?= $user->name ?>
		</a>

		<div class="semi-small text-secondary">
			<?php if ($user->signature) : ?>
			<?= $user->signature ?>
			<?php endif; ?>

			<?php if ($user->signature && $user->site) : ?>
			<span class="font-weight-bold mx-1 text-dark">&middot;</span>
